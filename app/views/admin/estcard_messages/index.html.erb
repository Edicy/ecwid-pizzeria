<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<table class="table table-striped table-condensed">
<thead>
<tr>
  <th><%= t('.ecuno') %></th>
  <th><%= t('.receipt_no') %></th>
  <th><%= t('.amount') %></th>
  <th><%= t('.respcode') %></th>
  <th><%= t('.date') %></th>
  <th><%= t('.description') %></th>
</tr>
</thead>
<tbody>
<% @messages.each do |message| %>
<tr>
  <td><%= message.ecuno %></td>
  <td><%= message.receipt_no %></td>
  <td><%= number_to_currency((message.eamount.to_i / 100.0), unit: message.cur.to_s) %></td>
  <td><%= message.respcode %></td>
  <td><%= l(message.datetime.present? ? message.datetime.to_time : message.created_at) rescue '' %></td>
  <td><%= message.msgdata %></td>
</tr>
<% end %>
</tbody>
</table>

<div class="text-center"><%= will_paginate @messages %></div>
