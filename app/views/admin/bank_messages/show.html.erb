<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<div class="row">
  <div class="col-md-6">
    <h3><%= t('.payment') %></h3>
    <p>
      <b><%= t('.date') %>:</b> <%= l @message.created_at %><br/>
      <b><%= t('.ref_no') %>:</b> <%= @message.ref_no %><br/>
      <b><%= t('.payment_id') %>:</b> <%= @message.payment_id %><br/>
      <b><%= t('.message') %>:</b> <%= @message.message %><br/>
      <b><%= t('.amount') %>:</b> <%= number_to_currency(@message.amount, unit: @message.currency.to_s) %><br/>
      <b><%= t('.provider') %>:</b> <%= @message.provider %>
    </p>
  </div>

  <div class="col-md-6">
    <h3><%= t('.sender') %></h3>
    <p>
      <b><%= t('.sender_name') %>:</b> <%= @message.sender_name %><br/>
      <b><%= t('.sender_account') %>:</b> <%= @message.sender_account %>
    </p>
  </div>
</div>
