<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<table class="table table-striped table-condensed">
<thead>
<tr>
  <th><%= t('.provider') %></th>
  <th><%= t('.ref_no') %></th>
  <th><%= t('.amount') %></th>
  <th><%= t('.date') %></th>
  <th></th>
</tr>
</thead>
<tbody>
<% @messages.each do |message| %>
<tr>
  <td><%= message.provider %></td>
  <td><%= message.ref_no %></td>
  <td><%= number_to_currency(message.amount, unit: message.currency.to_s) %></td>
  <td><%= l message.updated_at %></td>
  <td>
    <%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, admin_bank_message_path(message) %>
  </td>
</tr>
<% end %>
</tbody>
</table>

<div class="text-center"><%= will_paginate @messages %></div>
