<div class="page-header">
  <h1><%= t('.title') %></h1>
</div>

<table class="table table-striped table-condensed">
<thead>
<tr>
  <th><%= t('.order_id') %></th>
  <th><%= t('.customer_email') %></th>
  <th><%= t('.amount') %></th>
  <th><%= t('.description') %></th>
  <th><%= t('.date') %></th>
  <th><%= t('.status') %></th>
</tr>
</thead>
<tbody>
<% @payments.each do |payment| %>
<tr>
  <td><%= payment.order_id %></td>
  <td><%= payment.customer_email %></td>
  <td><%= number_to_currency(payment.amount, unit: payment.currency.to_s) %></td>
  <td><%= payment.description %></td>
  <td><%= l(payment.updated_at) %></td>
  <td><span class="label label-<%= payment.delivered? ? 'success' : 'default' %>"><%= t(payment.status, scope: 'labels.payment.status') %></span></td>
</tr>
<% end %>
</tbody>
</table>

<div class="text-center"><%= will_paginate @payments %></div>
